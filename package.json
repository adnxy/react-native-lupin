{
  "name": "lupin-security-scanner",
  "version": "1.0.0",
  "description": "Static security scanner for React Native and Expo bundles. Detects hardcoded secrets, API keys, insecure patterns, and 60+ security vulnerabilities.",
  "main": "src/index.js",
  "bin": {
    "lupin": "./bin/lupin.js"
  },
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "npm test -- --testMatch='**/test/integration/**/*.test.js'",
    "test:unit": "npm test -- --testMatch='**/test/unit/**/*.test.js'",
    "lint": "echo 'No linter configured yet'",
    "format": "echo 'No formatter configured yet'",
    "cli:test": "node bin/lupin.js --bundle test/fixtures/sample-vulnerable-bundle.js",
    "cli:clean": "node bin/lupin.js --bundle test/fixtures/sample-clean-bundle.js",
    "prepublishOnly": "npm test",
    "prepare": "echo 'Package prepared for publishing'",
    "security": "npm audit"
  },
  "keywords": [
    "react-native",
    "expo",
    "security",
    "scanner",
    "static-analysis",
    "security-audit",
    "bundle-analyzer",
    "secret-detection",
    "api-keys",
    "mobile-security",
    "devsecops",
    "sast",
    "code-security",
    "openai",
    "stripe",
    "aws",
    "secrets-detection",
    "vulnerability-scanner",
    "penetration-testing",
    "appsec",
    "javascript-security",
    "mobile-app-security",
    "security-testing",
    "ci-cd",
    "devops",
    "anthropic",
    "claude",
    "gemini",
    "ai-security"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lupin-security-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lupin-security-scanner/issues"
  },
  "homepage": "https://github.com/yourusername/lupin-security-scanner#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  }
}


